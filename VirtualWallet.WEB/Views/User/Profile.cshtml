@model UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="card mb-4 w-50 mx-auto">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.PhotoUrl" alt="Profile Picture" />
                </div>
                <div class="col-md-8">
                    <h2><strong>@Model.UserName</strong> </h2>
                    <p><strong>First Name:</strong>@Model.FirstName</p>
                    <p><strong>Last Name:</strong>@Model.FirstName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    <p><strong>Address:</strong></p>
                    <p><strong>Country:</strong>@Model.Country</p>
                    <p><strong>State:</strong>@Model.State</p>
                    <p><strong>City:</strong>@Model.City</p>
                    <p><strong>Street:</strong>@Model.Street</p>
                    <p><strong>PostalCode:</strong>@Model.PostalCode</p>
                </div>
            </div>
        </div>
    </div>
</div>
