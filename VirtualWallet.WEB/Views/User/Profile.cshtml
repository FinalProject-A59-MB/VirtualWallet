@model UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="card mb-4 w-50 mx-auto">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.PhotoUrl" class="img-thumbnail rounded-circle" alt="Profile Picture" />
                </div>
                <div class="col-md-8">
                    <h2>@Model.FirstName @Model.LastName</h2>
                    <p><strong>Username:</strong> @Model.UserName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    <p><strong>Address:</strong> @Model.Street, @Model.City, @Model.State, @Model.PostalCode, @Model.Country</p>
                </div>
            </div>
        </div>
    </div>
</div>
