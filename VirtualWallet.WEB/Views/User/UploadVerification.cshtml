@model VerificationViewModel

@{
    ViewData["Title"] = "Upload Verification Documents";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="UploadVerificationDocuments" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="PhotoId" class="control-label">Upload Photo ID</label>
            <input asp-for="PhotoId" type="file" class="form-control" />
            <span asp-validation-for="PhotoId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LicenseId" class="control-label">Upload License ID</label>
            <input asp-for="LicenseId" type="file" class="form-control" />
            <span asp-validation-for="LicenseId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
