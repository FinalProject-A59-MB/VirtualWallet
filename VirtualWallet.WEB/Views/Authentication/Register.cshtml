@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="register-area area-padding fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-8 col-xs-12">
                <div class="register-form bg-dark-1 p-4 rounded shadow">
                    <h4 class="text-center mb-4">Create Your Account</h4>
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-outline-secondary w-100">Register</button>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("GoogleRegister", "Authentication")" class="btn btn-outline-danger w-100">
                                <i class="fab fa-google"></i> Register with Google
                            </a>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Login", "Authentication")">Already have an account? Login</a>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Index", "Home")">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
