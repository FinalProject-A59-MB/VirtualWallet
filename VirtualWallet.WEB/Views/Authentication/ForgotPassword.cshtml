@model ForgotPasswordViewModel

<div class="forgot-password-area area-padding fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-8 col-xs-12">
                <div class="forgot-password-form bg-dark-1 p-4 rounded shadow">
                    <h4 class="text-center mb-4">Forgot Password</h4>
                    <p class="text-center mb-4">Enter your email address below and we'll send you a link to reset your password.</p>

                    <form asp-action="ForgotPassword" method="post" class="log-form">
                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-outline-secondary w-100">Send Password Reset Link</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Authentication")" class="text-muted">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
