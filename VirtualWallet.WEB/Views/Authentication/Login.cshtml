@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="card mb-4 w-50 mx-auto">
    <div class="card-body">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h2 class="text-center">Login</h2>

                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="UsernameOrEmail" class="control-label">Username or Email</label>
                            <input asp-for="UsernameOrEmail" class="form-control" />
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <span asp-validation-for="CustomError" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("ForgotPassword", "Authentication")">Forgot your password?</a>
                        </div>
                 
                        <div class="form-group text-center">
                            <a href="@Url.Action("GoogleLogin", "Authentication")" class="btn btn-danger mt-3">
                                <i class="fab fa-google"></i> Login with Google
                            </a>
                        </div>

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Register", "Authentication")">Don't have an account?</a>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Index", "Home")">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
