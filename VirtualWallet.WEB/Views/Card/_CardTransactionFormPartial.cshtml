@model CardTransactionViewModel

<div class="dashboard-content">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="send-money-form">
                <div class="form-text">
                    <h4 class="form-top">@Model.ActionTitle</h4>
                    <div class="form-inner">
                        <form asp-action="@Model.FormAction" method="post">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="amount">Type Amount</label>
                                    <input type="number" value="0" id="amount" name="Amount" class="form-control" />
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="wallet">Select Wallet</label>
                                    <select name="WalletId" id="wallet" class="form-control">
                                        @foreach (var wallet in Model.Wallets)
                                        {
                                            <option value="@wallet">@wallet.Name (@wallet.Currency)</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label for="card">Select Card</label>
                                    <select name="CardId" id="card" class="form-control">
                                        @foreach (var card in Model.Cards)
                                        {
                                            <option value="@card">@card.CardNumber</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <button type="submit" class="btn btn-primary mt-4">Submit</button>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <label for="recipientText">Recipient Text</label>
                                    <textarea name="RecipientText" rows="4" id="recipientText" class="form-control"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
