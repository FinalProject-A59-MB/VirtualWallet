@model IEnumerable<CardTransactionViewModel>

<div class="col-md-9 col-sm-9 col-xs-12">
    <div class="dashboard-content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="send-money-form transection-log">
                    <div class="form-text">
                        <h4 class="form-top">Card Transactions Log</h4>
                        <div class="form-inner table-inner">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model)
                                    {
                                        <tr>
                                            <td>@transaction.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>@transaction.Amount.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
