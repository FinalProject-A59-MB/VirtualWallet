@model CardViewModel

@{
    ViewData["Title"] = "Delete Card";
}

<div class="card mb-4 w-50 mx-auto">
    <div class="card-body">
        <h2 class="text-center text-danger">Delete Card</h2>

        <p class="text-center">Are you sure you want to delete this card?</p>

        <div class="card mb-4">
            <div class="card-body">
                <p><strong>Card Holder Name:</strong> @Model.CardHolderName</p>
                <p><strong>Card Number:</strong> @Model.CardNumber</p>
                <p><strong>Issuer:</strong> @Model.Issuer</p>
                <p><strong>Expiration Date:</strong> @Model.ExpirationDate</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Profile" asp-controller="User" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
