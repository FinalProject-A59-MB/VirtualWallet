@model CardViewModel

@{
    ViewData["Title"] = "Add Card";
}

<div class="card mb-4 w-50 mx-auto">
    <div class="card-body">
        <h2 class="text-center">Add a New Card</h2>

        <div class="form-group text-center">
            <span asp-validation-for="CustomError" class="text-danger"></span>
        </div>

        <form asp-action="AddCard" method="post">
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="form-group">
                <label asp-for="CardHolderName" class="control-label">Card Holder Name</label>
                <input asp-for="CardHolderName" class="form-control" />
                <span asp-validation-for="CardHolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issuer" class="control-label">Issuer</label>
                <select asp-for="Issuer" class="form-control">
                    <option value="visa">Visa</option>
                    <option value="mastercard">MasterCard</option>
                </select>
                <span asp-validation-for="Issuer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
                <input asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvv" class="control-label">CVV</label>
                <input asp-for="Cvv" class="form-control" type="password" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Add Card</button>
            </div>
        </form>
    </div>
</div>
