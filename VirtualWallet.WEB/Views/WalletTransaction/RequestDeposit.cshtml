@section Scripts {
    <script src="~/js/wallettransaction.js"></script>
}


<div class="container-inputs">


    <h1>Request money</h1>



    <div class="form-group">
        <label class="control-label">Sender (Username/Email)</label>
        <input class="form-control" id="input-from" />
    </div>

    <div class="form-group">
        <label class="control-label">Amount</label>
        <input class="form-control" id="input-amount" />
    </div>

    <div class="form-group">
        <label class="control-label">Description</label>
        <input class="form-control" id="input-description" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary" id="submit-request-deposit">Submit</button>
    </div>

</div>
