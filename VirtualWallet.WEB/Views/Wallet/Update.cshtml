@using VirtualWallet.WEB.Models.DTOs.WalletDTOs
@model WalletRequestDto

@{
    ViewData["Title"] = "Update Wallet";
}

<h2>Update Wallet</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Hidden field to keep the wallet ID -->

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WalletType" class="control-label"></label>
        <select asp-for="WalletType" class="form-control">
            @foreach (var walletType in Enum.GetValues(typeof(WalletType)))
            {
                if((WalletType)walletType == Model.WalletType)
                {
                    <option value="@walletType" selected>
                    @walletType
                    </option>
                }
                else
                {
                  <option value="@walletType">
                    @walletType
                </option>  
                }
            }
        </select>
        <span asp-validation-for="WalletType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Currency" class="control-label"></label>
        <select asp-for="Currency" class="form-control">
            @foreach (var currency in Enum.GetValues(typeof(CurrencyType)))
            {
                if((CurrencyType)currency == Model.Currency)
                {
                    <option value="@currency" selected>
                        @currency
                    </option>
                }
                else
                {
                    <option value="@currency">
                        @currency
                    </option>
                } 
            }
        </select>
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>