<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VirtualWallet.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VirtualWallet.WEB.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    <header>
        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3 bg-dark">
            <div class="container-fluid">
                <!-- Left-aligned Brand and Navbar Links -->
                <div class="d-flex align-items-center">
                    <!-- Brand Section -->
                    <a class="navbar-brand text-white fw-bold me-4" asp-area="" asp-controller="Home" asp-action="Index">VaulTora</a>

                    <!-- Navbar Links -->
                    <div class="collapse navbar-collapse" id="navbar-main">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("About", "Home")">About us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="contact.html">Contacts</a>
                            </li>
                            @if (ViewBag.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="dashboardDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Dashboard
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dashboardDropdown">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("SendMoney", "Transaction")">
                                                <i class="ti-new-window me-2"></i> Send Money
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("RequestMoney", "Transaction")">
                                                <i class="ti-receipt me-2"></i> Request Money
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Deposit", "Card")">
                                                <i class="ti-wallet me-2"></i> Deposit to Wallet
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Withdraw", "Card")">
                                                <i class="ti-import me-2"></i> Withdraw from Wallet
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Wallets", "Wallet")">
                                                <i class="ti-pencil-alt me-2"></i> Wallets
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Cards", "Card")">
                                                <i class="ti-credit-card me-2"></i> Cards
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("CardTransactions", "Card")">
                                                <i class="ti-credit-card me-2"></i> Card Transactions
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("WalletTransactions", "Wallet")">
                                                <i class="ti-credit-card me-2"></i> Wallet Transactions
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Profile", "User")">
                                                <i class="ti-settings me-2"></i> Profile
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (!ViewBag.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Right-aligned Search Bar -->
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </nav>
        <!-- End Main Navigation -->
    </header>






    <div class="container bg-dark">
        <main role="main" class="pb-3">
            @if (TempData["ErrorMessage"] != null && !string.IsNullOrEmpty(TempData["ErrorMessage"].ToString()))
            {
                <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessage"]
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (TempData["SuccessMessage"] != null && !string.IsNullOrEmpty(TempData["SuccessMessage"].ToString()))
            {
                <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="errorModalLabel">Success</h5>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }


            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - VirtualWallet.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script type="text/javascript">

    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
