@{
    ViewData["Title"] = "Home Page";
}
<!-- Start hero -->
<div class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 text-center">
                <div class="hero-content">
                    <h2 class="display-4 text-white">Seamlessly Manage Your Finances</h2>
                    <p class="lead text-white">Fast, secure, and easy-to-use financial solutions for all your needs.</p>
                    <a href="@Url.Action("Register", "Authentication")" class="btn btn-primary btn-lg mb-2">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End hero -->
<!-- Start how-it-works -->
<div class="how-it-works-area py-5 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-box text-center">
                    <div class="feature-icon mb-3">
                        <i class="flaticon-102-businessman display-4 text-primary"></i>
                    </div>
                    <h4>Create an Account</h4>
                    <p>Easily create an account in minutes and start managing your finances.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box text-center">
                    <div class="feature-icon mb-3">
                        <i class="flaticon-046-bank-1 display-4 text-primary"></i>
                    </div>
                    <h4>Link Your Bank</h4>
                    <p>Securely link your bank accounts to monitor and manage your finances in one place.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box text-center">
                    <div class="feature-icon mb-3">
                        <i class="flaticon-028-money display-4 text-primary"></i>
                    </div>
                    <h4>Start Transacting</h4>
                    <p>Send and receive money easily, pay bills, and manage your spending with a few clicks.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End how-it-works -->
<!-- Start why-choose-us -->@* 
<div class="why-choose-us-area py-5 bg-dark text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="why-choose-us-content">
                    <h3>Why Choose Our Services?</h3>
                    <p>We offer reliable, secure, and cost-effective financial solutions tailored to your needs.</p>
                    <ul class="list-unstyled">
                        <li class="media mb-3">
                            <i class="flaticon-079-graphic display-4 text-primary mr-3"></i>
                            <div class="media-body">
                                <h5>Low Fees</h5>
                                <p>Enjoy low transaction fees and competitive rates.</p>
                            </div>
                        </li>
                        <li class="media mb-3">
                            <i class="flaticon-007-document-2 display-4 text-primary mr-3"></i>
                            <div class="media-body">
                                <h5>Secure Transactions</h5>
                                <p>Your security is our priority with advanced encryption and fraud detection.</p>
                            </div>
                        </li>
                        <li class="media mb-3">
                            <i class="flaticon-107-speech-bubbles display-4 text-primary mr-3"></i>
                            <div class="media-body">
                                <h5>24/7 Support</h5>
                                <p>Get round-the-clock support from our expert team.</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <img src="img/about/vd.jpg" alt="Why Choose Us" class="img-fluid">
            </div>
        </div>
    </div>
</div>
<!-- End why-choose-us --> *@
<!-- Start testimonials -->
<div id="testimonialCarousel" class="carousel slide testimonials-area py-5 bg-dark" data-bs-ride="carousel">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>What Our Clients Say</h3>
                <p>Hear from our satisfied customers and see why they trust us.</p>
            </div>
        </div>
        <div class="carousel-inner">
            <!-- First Slide -->
            <div class="carousel-item active">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="testimonial-box text-center">
                            <p>"Great service! It’s so easy to send money and pay bills. Highly recommend!"</p>
                            <h5>John Doe</h5>
                            <span>Entrepreneur</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Second Slide -->
            <div class="carousel-item">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="testimonial-box text-center">
                            <p>"A seamless experience from start to finish. Customer support is excellent!"</p>
                            <h5>Jane Smith</h5>
                            <span>Freelancer</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Third Slide -->
            <div class="carousel-item">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="testimonial-box text-center">
                            <p>"The security and speed of transactions are unmatched. I feel safe using this platform."</p>
                            <h5>Emily Johnson</h5>
                            <span>Digital Marketer</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>

<!-- End testimonials -->

